ganho_hora = float(input('Quanto ganha por hora? '))
horas_trabalhadas = int(input('Horas trabalhadas por mês: '))

salario_bruto = ganho_hora * horas_trabalhadas
ir = salario_bruto * 0.11
inss = salario_bruto * 0.08
sind = salario_bruto * 0.05

print ('+ Salário Bruto : R$ %.2f' %salario_bruto)
print ('- IR: R$ %.2f' %ir )
print ('- INSS: R$ %.2f' %inss )
print ('- Sindicato: R$ %.2f' %sind)
print ('= Salário Liquido : R$ %.2f' %(salario_bruto - ir - inss - sind))
